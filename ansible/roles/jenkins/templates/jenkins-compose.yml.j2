
version: "3.9"
services:
  jenkins:
    image: jenkins/jenkins:lts
    user: root
    ports:
      - "{{ jenkins_http_port }}:8080"
      - "50000:50000"
    volumes:
      - jenkins_home:/var/jenkins_home
      - /var/run/docker.sock:/var/run/docker.sock
    environment:
      - JAVA_OPTS=-Djenkins.install.runSetupWizard=false
volumes:
  jenkins_home:
